const mongoose = require("mongoose");

const connection = async() => {
    try {
        //mongodb://localhost:27017/ecommerce
        //mongodb://mongo:dDsxUJevhDoQgOWUtVVchRbCZUbLZrqz@monorail.proxy.rlwy.net:56588
        await mongoose.connect("mongodb://mongo:dDsxUJevhDoQgOWUtVVchRbCZUbLZrqz@monorail.proxy.rlwy.net:56588", {
            dbName: "ecommerce"
        });
        console.log("Conexion a BBDD realizada");
    } catch(error) {
        console.log(error);
        throw new Error("No se ha podido conectar a la BBDDs");
  
    }
};

module.exports = connection;